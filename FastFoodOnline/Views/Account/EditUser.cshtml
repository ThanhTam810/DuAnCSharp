@model FastFoodOnline.ViewModels.EditUserViewModel

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4" style="background:#fff0f6;">
        <div class="card-header text-white text-center py-3"
             style="background: linear-gradient(90deg, #ff85c0, #ffadd2); border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
            <h2 class="mb-0">🌸 Chỉnh sửa tài khoản 🌸</h2>
        </div>

        <div class="card-body p-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            <form asp-action="EditUser" method="post">
                <h4 class="text-pink">Thông tin cá nhân</h4>
                <div class="form-group mb-3">
                    <label asp-for="FullName" class="fw-bold text-pink"></label>
                    <input asp-for="FullName" class="form-control border-pink" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="fw-bold text-pink"></label>
                    <input asp-for="PhoneNumber" class="form-control border-pink" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Address" class="fw-bold text-pink"></label>
                    <input asp-for="Address" class="form-control border-pink" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DateOfBirth" class="fw-bold text-pink"></label>
                    <input asp-for="DateOfBirth" class="form-control border-pink" type="date" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="fw-bold text-pink"></label>
                    <input asp-for="Email" class="form-control border-pink" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <hr />
                <h4 class="text-pink">Đổi mật khẩu</h4>
                <div class="form-group mb-3">
                    <label asp-for="CurrentPassword" class="fw-bold text-pink"></label>
                    <input asp-for="CurrentPassword" class="form-control border-pink" type="password" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NewPassword" class="fw-bold text-pink"></label>
                    <input asp-for="NewPassword" class="form-control border-pink" type="password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="fw-bold text-pink"></label>
                    <input asp-for="ConfirmPassword" class="form-control border-pink" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-pink w-100">💾 Lưu thay đổi</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .text-pink {
        color: #d63384 !important;
    }

    .border-pink {
        border: 1px solid #ffadd2 !important;
    }

    .btn-pink {
        background: linear-gradient(90deg, #ff85c0, #ffadd2);
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-pink:hover {
            background: linear-gradient(90deg, #f759ab, #ffa6c9);
            transform: scale(1.05);
        }
</style>
